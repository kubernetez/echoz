<project
    name = "echoz"
    description = "Simple Echo Client Server"
    script = "zproject.gsl"
    email = "taotetek@gmail.com"
    repository = "https://github.com/kubernetez/echoz"
    url = "https://github.com/kubernetez/echoz"
    license = "MPLv2"
	>

    <include filename = "license.xml" />
    <version major = "0" minor = "1" patch = "0" />
    
    <target name = "autotools" />
    <target name = "docker" />
    
    <use project = "czmq" />

    <actor name = "zecho_actor">Actor for zechoer</actor>
    <class name = "zechoer">Echo server API</class>

    <main name = "echoz_client">Echo client</main>
    <main name = "echoz_server">Echo server</main>

</project>
